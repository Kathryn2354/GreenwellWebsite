@{
    Layout = "/Areas/Identity/Pages/_Layout.cshtml";
}

<h1>Manage your account</h1>

<div>
    <h4>Change your account settings</h4>
    @if (User.IsInRole("Administrator"))
    {
    <b>Admin</b>
    }
    else { 
        <b>Employee</b>
    }


    <hr />
    <div class="row">
        <div class="col-md-3">
            <partial name="_ManageNav" />
        </div>
        <div class="col-md-9">
            @RenderBody()
        </div>
    </div>
</div>

@section Scripts {
    @RenderSection("Scripts", required: false)
}
