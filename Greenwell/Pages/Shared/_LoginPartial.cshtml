@using Microsoft.AspNetCore.Identity
@using Greenwell.Models;
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@{
    string returnUrl = null;
    var query = ViewContext.HttpContext.Request.Query;
    if (query.ContainsKey("returnUrl"))
    {
        returnUrl = query["returnUrl"];
    }
}

<ul class="navbar-nav">

    <li class="nav-item">
        <a class="nav-link text-dark" asp-area="Identity" asp-page="/help/Help">Help</a>
    </li>

    @if (SignInManager.IsSignedIn(User))
    {

<li class="nav-item">
    <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Login" asp-route-returnUrl="@returnUrl">Login</a>
</li>

        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Your Profile</a>
        </li>

        if (User.IsInRole("Administrator"))
        {

            <li class="nav-item">
                <a class="text-dark nav-link" href="/Admin/Manage">Admin Only/Handle Users</a>
            </li>

        }
        <li class="nav-item">
            <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="/">
                <button type="submit" class="nav-link btn btn-link text-dark">Logout</button>
            </form>
        </li>

        // AdminApproval//
    }

        
    

</ul>
